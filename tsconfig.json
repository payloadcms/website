{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@forms/*": [
        "./src/forms/*"
      ],
      "@blocks/*": [
        "./src/blocks/*"
      ],
      "@scss/*": [
        "./src/css/*"
      ],
      "@root/*": [
        "./src/*"
      ],
      "@providers": [
        "./src/providers",
      ],
      "@providers/*": [
        "./src/providers/*",
      ],
      "@icons/*": [
        "./src/icons/*",
      ],
      "@utilities/*": [
        "./src/utilities/*",
      ],
      "@types": [
        "./src/payload-types.ts",
      ],
      "@graphics/*": [
        "./src/graphics/*",
      ],
      "@graphql": [
        "./src/graphql",
      ],
      "@graphql/*": [
        "./src/graphql/*",
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "pages__old"
  ]
}
